{
    "private": true,
    "name": "erudit-monorepo",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/erudit-js/erudit.git"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "playground"
        ],
        "catalog": {
            "@jsprose/core": "^1.0.0",
            "vue": "latest",
            "vue-router": "latest",
            "@floating-ui/vue": "^1.1.9",
            "image-size": "^2.0.2",
            "chalk": "^5.6.2",
            "consola": "^3.4.2"
        }
    },
    "scripts": {
        "pretty": "prettier --write .",
        "build": "bun run scripts/build",
        "publish": "bun run scripts/publish",
        "play": "bun erudit dev playground --eruditPath=./packages/erudit",
        "play:prepare": "bun erudit prepare playground",
        "play:build": "bun erudit build playground",
        "play:generate": "bun erudit generate playground",
        "play:launch": "bun erudit launch playground",
        "play:preview": "bun erudit preview playground"
    },
    "devDependencies": {
        "prettier": "^3.8.1",
        "prettier-plugin-classnames": "^0.8.6",
        "prettier-plugin-merge": "^0.8.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "slash": "^5.1.0"
    }
}
