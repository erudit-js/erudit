{
    "private": true,
    "name": "erudit-monorepo",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/erudit-js/erudit.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "pretty": "prettier --write .",
        "build": "bun run scripts/build",
        "publish": "bun run scripts/publish",
        "play": "bun erudit dev playground --eruditPath=./packages/erudit",
        "play:prepare": "bun erudit prepare playground",
        "play:build": "bun erudit build playground",
        "play:generate": "bun erudit build playground --prerender",
        "play:launch": "bun erudit launch playground",
        "play:preview": "bun erudit preview playground"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.6.2",
        "prettier": "^3.6.2",
        "prettier-plugin-classnames": "^0.8.4",
        "prettier-plugin-merge": "^0.8.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "prettier-plugin-tailwindcss": "^0.6.14"
    }
}
