{
  "private": true,
  "name": "erudit-monorepo",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erudit-js/erudit.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "playground"
    ],
    "catalog": {
      "tsprose": "^1.0.1",
      "vue": "latest",
      "vue-router": "latest",
      "@floating-ui/vue": "^1.1.10",
      "image-size": "^2.0.2",
      "consola": "^3.4.2",
      "unslash": "^2.0.0",
      "ts-xor": "^1.3.0"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "version": "bun run scripts/version.ts",
    "build": "bun --workspaces run build",
    "publish": "bun update && bun run scripts/publish",
    "play": "bun erudit dev playground",
    "play:prepare": "bun erudit prepare playground",
    "play:build": "bun erudit build playground",
    "play:generate": "bun erudit generate playground",
    "play:launch": "bun erudit launch playground",
    "play:preview": "bun erudit preview playground"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-classnames": "^0.9.0",
    "prettier-plugin-merge": "^0.9.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "ts-xor": "^1.3.0"
  }
}
