{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "verbatimModuleSyntax": true
    },
    "include": ["./src/**/*", "./tests/**/*", "./env.d.ts"],
    "exclude": ["./tests/**/*"]
}
