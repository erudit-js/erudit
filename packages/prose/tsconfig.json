{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "verbatimModuleSyntax": true,
        "jsx": "react-jsx",
        "jsxImportSource": "src",
        "types": ["vite/client"],
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*", "./tests/**/*"]
}
